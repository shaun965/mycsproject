<% provide(:title, 'send text') %>



<div class="landing-page">
<!--  <%= render 'layouts/header' %> -->
  
<div class="headerrr">
  <div class="container">
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li class = "changedList"><%= link_to "Home", root_path %></li>
        <li class = "changedList"><%= link_to "Help", help_path %></li>
        <li class = "changedList"><%= link_to "Text", :text_controller %></li>

        <% if logged_in? %>
          <li><%=link_to "Users", users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class = "changedList"><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</div>

<h1>Send a text to the number</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag("/twilio", method: "post") do %>

      <%#= render 'shared/error_messages' %>

  		<%= label_tag(:q, "Message:") %>
  		<%= text_field_tag(:q) %>
  		

      <%= label_tag(:a, "Phone number:") %>
      <%= text_field_tag(:a) %>
      <br></br>

      <%= submit_tag("Send a text") %>

	<% end %>
  </div>
</div>


